<h1 class="text-center"><%=@list.name %></h1>
<div class="container text-center d-flex justify-content-center gap-5">
  <div class="card mb-3 " style="max-width: 540px;">
    <div class="row g-0 p-2">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-md-4">
          <img src=<%=bookmark.movie.poster_url%> class="card-img-top" width="200px" alt="Image of the movie">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%=bookmark.movie.title %></h5>
            <p class="card-text"><%=bookmark.movie.overview%></p>
            <p class="card-text">Rate:<%=bookmark.movie.rating%></p>
            <p class="card-text">Comment:<%=bookmark.comment%></p>
            <a href="#" class="btn btn-primary"><%= link_to "Delete", bookmark_path(bookmark),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form_new_movie bg-light">
    <h2>New movie:</h2>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie %>
      <%= f.input :comment %>
      <%= f.submit "Create a movie", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "Go back to the lists", lists_path ,class:"btn btn-primary"%>
  </div>
</div>
